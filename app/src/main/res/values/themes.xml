<resources>
    <!-- Base application theme. -->
    <style name="Theme.ShoppingApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_color_theme</item>
        <item name="colorPrimaryVariant">@color/bg_color_theme</item>
        <item name="colorOnPrimary">@color/bg_color_theme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bg_color_theme</item>
        <item name="colorSecondaryVariant">@color/bg_color_theme</item>
        <item name="colorOnSecondary">@color/bg_color_theme</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <!-- options are: explode, slide, fade -->
        <!--<item name="android:windowEnterTransition">@transition/slide</item>
        <item name="android:windowExitTransition">@transition/slide</item>-->

        <!-- specify shared element transitions -->
        <!--<item name="android:windowSharedElementEnterTransition">@transition/slide</item>
        <item name="android:windowSharedElementExitTransition">@transition/slide</item>-->
        <!--<item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/color_edit_text_hint</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="fontFamily">@font/montserrat_alternates</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

    <style name="ErrorText">
        <item name="android:textColor">@color/color_red</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="fontFamily">@font/montserrat_alternates</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">@dimen/_2sdp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="backgroundTint">@color/bg_color_btn</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="ButtonStyleCart">
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="strokeColor">@color/bg_color_btn</item>
        <item name="strokeWidth">@dimen/_1ssp</item>
        <item name="backgroundTint">@color/bg_color_card</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
    </style>
</resources>