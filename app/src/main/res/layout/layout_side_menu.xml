<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_theme"
        android:padding="@dimen/_15sdp">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMenuProfileImage"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:layout_constraintStart_toStartOf="@+id/recySideMenu"
            app:layout_constraintEnd_toEndOf="@+id/recySideMenu"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_50sdp"
            app:cardElevation="@dimen/_1sdp"
            app:cardMaxElevation="@dimen/_1sdp"
            android:translationZ="@dimen/_1sdp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivMenuProfileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_product"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/tvMenuSideName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cardMenuProfileImage"
            app:layout_constraintStart_toStartOf="@+id/recySideMenu"
            app:layout_constraintEnd_toEndOf="@+id/recySideMenu"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="Name"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recySideMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvMenuSideName"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>